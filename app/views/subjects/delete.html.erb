<h1>Delete Subject</h1>

<%= link_to("Return to main navigation", subjects_path) %><br>

<%= form_for(@subject, method: 'delete') do |f| %>
<table>
  <tr>
    <th>name</th>
    <td> <%= f.text_field :name %> </td>
  </tr>
  <tr>
    <th>position</th>
    <td> <%= f.text_field :position %> </td>
  </tr>
  <tr>
    <th>visible</th>
    <td> <%= f.text_field :visble %> </td>
  </tr>
</table>
<h2>Are you sure you want to delete this subject?</h2>
  <%= f.submit "Destroy subject" %>
<% end %>
